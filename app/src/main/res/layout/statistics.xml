<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Statistics"
        android:textStyle="bold"
        android:id="@+id/textStatistics"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:textColor="#000000"
        android:textIsSelectable="false"
        android:paddingBottom="25sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Speed Chart"
        android:textStyle="bold"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="25sp"
        android:id="@+id/texSpeed" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtHigh"
        android:background="#000000"
        android:clickable="false"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:paddingTop="10dp"
        android:gravity="center"
        android:width="15dp"
        android:height="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtLow"
        android:background="#FF0000"
        android:clickable="false"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:paddingTop="10dp"
        android:gravity="right"
        android:width="15dp"
        android:height="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="kilometers Chart"
        android:textStyle="bold"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="25sp"
        android:id="@+id/textkilometers" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/buttonStatisticsBack"
        android:layout_gravity="right"
        android:textSize="20dp"
        android:textColor="#000000" />

</LinearLayout>